{
  "variables": {
      "dockerhub_username": "",
      "dockerhub_password": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"java\", \"-jar\", \"/home/calculator-1.0-SNAPSHOT.jar\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt update",
        "apt install -y ansible"
      ]
    },
    {
      "type": "file",
      "source": "calculator-1.0-SNAPSHOT.jar",
      "destination": "/home/calculator-1.0-SNAPSHOT.jar"
    },
    {
      "type": "ansible-local",
      "playbook_file": "infra/job2/playbook.yaml"
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "vinilemess/spring-calculator",
      "tag": "0.1"
    },
    {
      "type": "docker-push",
      "login": true,
      "login_username": "{{user `dockerhub_username`}}",
      "login_password": "{{user `dockerhub_password`}}"
    }
  ]
}