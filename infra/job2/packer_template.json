{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "changes": [
        "EXPOSE 8080",
        "ENTRYPOINT [\"java\", \"-jar\", \"SpringCalculator-infra/calculator-1.0-SNAPSHOT.jar\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
